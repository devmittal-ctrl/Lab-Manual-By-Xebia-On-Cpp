#include<iostream>
using namespace std;
int main(){
  // the the pattern : 
  /* A
     A B 
     A B C
     A B C D  
  */
  int n;
  cout<<"tell how long you want to cover the pattern : ";
  cin>>n;
  for(int i=1;i<=n;i++){
     char ch='A';
    for(int j=1;j<=i;j++){  
      cout<<ch<<" ";
    ch++;
    }
    cout<<endl;
  }

   return 0;
}
