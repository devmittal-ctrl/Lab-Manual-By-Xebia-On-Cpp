#include<iostream>
using namespace std;
int main(){
  // the pattern 
  /* 5 4 3 2 1
     5 4 3 2 
     5 4 3 
     5 4  
  */
 int n;
 cout<<"enter how long you want to run the pattern : ";
 cin>>n;
 for(int i=1;i<=n;i++){
   for(int j=n;j>=i;j--){
      cout<<j<<" ";
   }
   cout<<endl;
 }

   return 0;
}
