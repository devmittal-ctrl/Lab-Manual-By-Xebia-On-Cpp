#include<iostream>
using namespace std;
int main(){
  // the sum of the odd and the even numbers
  int n;
  int min=INT_MAX;
  cout<<"enter how many elements you want to enter in the array : ";
  cin>>n;
  int arr[n];
  for(int i=0;i<n;i++){
    cout<<"the "<<i+1<<" th element of the array is the : ";
    cin>>arr[i];
  }
  for(int y=0;y<n;y++){
   if(arr[y]<min) min=arr[y];
  }
  cout<<"the minmum temperture is the : "<<min;
  

   return 0;
}
