#include<iostream> 
#include<math.h>
using namespace std;
int main() {
    // accepting the salary of 10 emplolyess and do the specific task
    int arr[10],sum=0;
    for(int i=0;i<10;i++){
        cout<<"enter the salary of the "<<i+1<<" th emplyee : ";
        cin>>arr[i];
        sum+=arr[i];
    }
    cout<<endl<<"the total salry given by the company is : "<<sum;
    cout<<endl<<"the average of the salry amoung the workers : "<<(float)sum/10;
    return 0;
}
