#include<iostream>
using namespace std;
int main(){
  // checking for the palindrome of the number 
  int n,ogn;
  cout<<"Enter a number n: ";
  cin>>n;
  ogn=n;
  // now we have to reverse the number
  int reverse =0; 
  while(n!=0){
    int rem=n%10;
    reverse = reverse*10 + rem;
    n/=10;
  }
  cout<<"the reverse of the number is : "<<reverse;
  if(reverse==ogn) cout<<"\nthe number is the palindrome ";
  else cout<<"\nthe number is not the palindrome ";

   return 0;
}
